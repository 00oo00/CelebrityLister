<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@redTheme.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="celebrityLister.EditListController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" prefHeight="461.0" prefWidth="439.0" spacing="10.0">
         <children>
            <Label text="Pressmeddelanden">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TableView fx:id="tableView" onMouseClicked="#userClickedOnTable" prefHeight="220.0" prefWidth="439.0" stylesheets="@redTheme.css">
              <columns>
                <TableColumn fx:id="firstNameColumn" onEditCommit="#changeFirstNameCellEvent" prefWidth="124.5" text="Pressmeddelande" />
                <TableColumn fx:id="lastNameColumn" onEditCommit="#changeLastNameCellEvent" prefWidth="124.5" text="Publicerad Ja/Nej" />
                  <TableColumn fx:id="birthdayColumn" prefWidth="106.5" text="Skickad datum" />
                  <TableColumn prefWidth="75.0" text="PM ID" />
              </columns>
            </TableView>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="firstNameTextField" promptText="First Name" />
                  <TextField fx:id="lastNameTextField" promptText="Last Name" />
                  <DatePicker fx:id="birthdayDatePicker" promptText="Birthday" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#newPersonButtonPushed" prefWidth="130.0" text="Add New Person" />
                  <Button mnemonicParsing="false" onAction="#deleteButtonPushed" prefWidth="130.0" text="Delete Person(s)" />
                  <Button fx:id="detailedPersonViewButton" mnemonicParsing="false" onAction="#changeSceneToDetailedPersonView" prefWidth="130.0" text="Detailed Person View" />
               </children>
            </HBox>
         </children>
      </VBox>
      <TextField fx:id="searchBar" layoutX="37.0" layoutY="504.0" promptText="Search" />
   </children>
</AnchorPane>
